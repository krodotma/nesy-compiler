{
  "name": "@ark/spine",
  "version": "0.1.0",
  "description": "Central backbone coordination layer for Neo Pluribus - LMDB registry + module orchestration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ark/core": "workspace:*",
    "@ark/bus": "workspace:*",
    "lmdb": "^3.0.0",
    "@msgpack/msgpack": "^3.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "sideEffects": false,
  "license": "Apache-2.0"
}
