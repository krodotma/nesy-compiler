{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kroma.live/schemas/metaingest/health.schema.json",
  "title": "MetaIngest Health Schemas",
  "description": "Schema definitions for Pipeline Health API endpoints",
  "$defs": {
    "HealthStatus": {
      "type": "string",
      "enum": ["healthy", "degraded", "unhealthy"],
      "description": "Overall pipeline health status"
    },
    "StatsPeriod": {
      "type": "string",
      "enum": ["hour", "day", "week", "all"],
      "default": "day",
      "description": "Time period for statistics"
    },
    "InputSource": {
      "type": "string",
      "enum": ["manual", "voice", "api", "agent"],
      "description": "Source of content input"
    },
    "GateStatus": {
      "type": "string",
      "enum": ["idle", "processing", "complete", "error", "unknown"],
      "description": "Gate component status"
    },
    "IngestorStatus": {
      "type": "string",
      "enum": ["connected", "fallback", "error", "unknown"],
      "description": "Ingestor component status"
    },
    "PipelineHealth": {
      "type": "object",
      "required": ["healthy", "gate_status", "tracker_status", "ingestor_status", "falkordb_available", "total_processed", "errors_last_hour"],
      "properties": {
        "healthy": {
          "type": "boolean"
        },
        "gate_status": {
          "$ref": "#/$defs/GateStatus"
        },
        "tracker_status": {
          "type": "string"
        },
        "ingestor_status": {
          "$ref": "#/$defs/IngestorStatus"
        },
        "falkordb_available": {
          "type": "boolean"
        },
        "last_processed": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "total_processed": {
          "type": "integer",
          "minimum": 0
        },
        "errors_last_hour": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "HealthResponse": {
      "type": "object",
      "required": ["status", "health", "components"],
      "properties": {
        "status": {
          "$ref": "#/$defs/HealthStatus"
        },
        "health": {
          "$ref": "#/$defs/PipelineHealth"
        },
        "components": {
          "type": "object",
          "required": ["gate", "tracker", "ingestor", "falkordb"],
          "properties": {
            "gate": { "type": "boolean" },
            "tracker": { "type": "boolean" },
            "ingestor": { "type": "boolean" },
            "falkordb": { "type": "boolean" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "ProcessContentRequest": {
      "type": "object",
      "required": ["content", "source"],
      "properties": {
        "content": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100000,
          "description": "Content to process through pipeline"
        },
        "source": {
          "$ref": "#/$defs/InputSource"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": true,
          "description": "Optional metadata"
        }
      },
      "additionalProperties": false
    },
    "PipelineResult": {
      "type": "object",
      "required": ["input_id", "success", "gate_state", "terms_tracked", "drift_detected", "concepts_ingested", "processing_time_ms", "errors"],
      "properties": {
        "input_id": {
          "type": "string",
          "format": "uuid"
        },
        "success": {
          "type": "boolean"
        },
        "gate_state": {
          "type": "string"
        },
        "terms_tracked": {
          "type": "integer",
          "minimum": 0
        },
        "drift_detected": {
          "type": "array",
          "items": { "type": "string" }
        },
        "concepts_ingested": {
          "type": "integer",
          "minimum": 0
        },
        "processing_time_ms": {
          "type": "integer",
          "minimum": 0
        },
        "errors": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "ProcessContentResponse": {
      "type": "object",
      "required": ["result", "summary"],
      "properties": {
        "result": {
          "$ref": "#/$defs/PipelineResult"
        },
        "summary": {
          "type": "object",
          "required": ["processed", "new_concepts", "drifting_terms"],
          "properties": {
            "processed": { "type": "boolean" },
            "new_concepts": { "type": "integer", "minimum": 0 },
            "drifting_terms": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "GateStats": {
      "type": "object",
      "required": ["current_state", "total_gated"],
      "properties": {
        "current_state": { "type": "string" },
        "total_gated": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "TrackerStats": {
      "type": "object",
      "required": ["total_terms", "drifting_terms"],
      "properties": {
        "total_terms": { "type": "integer", "minimum": 0 },
        "drifting_terms": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "IngestorStats": {
      "type": "object",
      "required": ["total_concepts", "total_relationships", "falkordb_available"],
      "properties": {
        "total_concepts": { "type": "integer", "minimum": 0 },
        "total_relationships": { "type": "integer", "minimum": 0 },
        "falkordb_available": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "ErrorRecord": {
      "type": "object",
      "required": ["timestamp", "errors"],
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "errors": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "GetStatsRequest": {
      "type": "object",
      "properties": {
        "period": {
          "$ref": "#/$defs/StatsPeriod"
        }
      },
      "additionalProperties": false
    },
    "PipelineStats": {
      "type": "object",
      "required": ["total_processed", "last_processed", "processed_last_hour", "processed_last_day", "processed_last_week", "gate", "tracker", "ingestor", "errors_last_hour", "recent_errors"],
      "properties": {
        "total_processed": {
          "type": "integer",
          "minimum": 0
        },
        "last_processed": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "processed_last_hour": {
          "type": "integer",
          "minimum": 0
        },
        "processed_last_day": {
          "type": "integer",
          "minimum": 0
        },
        "processed_last_week": {
          "type": "integer",
          "minimum": 0
        },
        "gate": {
          "$ref": "#/$defs/GateStats"
        },
        "tracker": {
          "$ref": "#/$defs/TrackerStats"
        },
        "ingestor": {
          "$ref": "#/$defs/IngestorStats"
        },
        "errors_last_hour": {
          "type": "integer",
          "minimum": 0
        },
        "recent_errors": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ErrorRecord"
          },
          "maxItems": 50
        }
      },
      "additionalProperties": false
    }
  }
}
