{
  "name": "@pluribus/nucleus-dashboard",
  "version": "0.1.0",
  "description": "Unified isomorphic dashboard - Qwik City + Material UI + Shadcn + Lit + Expo + WASM",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "import": "./dist/components/index.js"
    },
    "./state": {
      "import": "./dist/lib/state/index.js"
    },
    "./bus": {
      "import": "./dist/lib/bus/index.js"
    },
    "./qwik": {
      "import": "./src/routes/index.tsx"
    }
  },
  "scripts": {
    "dev": "vite --mode ssr --host 0.0.0.0 --port 5173",
    "dev:qwik": "qwik dev",
    "build": "qwik build && npm run build.node",
    "build.client": "vite build --mode client",
    "build.server": "vite build --mode ssr",
    "build.preview": "vite build --mode ssr",
    "build.node": "vite build -c adapters/node-server/vite.config.ts",
    "build.wasm": "bash scripts/build-wasm.sh",
    "preview": "qwik preview",
    "serve": "node server/entry.node-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:tui": "python3 -m pytest tests/tui/",
    "test:e2e": "playwright test",
    "test:e2e:live": "E2E_BASE_URL=https://kroma.live playwright test",
    "test:e2e:live:ip": "E2E_BASE_URL=http://69.169.104.17:5173 playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint --no-error-on-unmatched-pattern src/",
    "typecheck": "tsc --noEmit",
    "bridge": "tsx src/lib/bus/bus-bridge.ts",
    "sync:spec": "node scripts/sync-spec.js",
    "qwik": "qwik"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.5.0",
    "@builder.io/qwik-city": "^1.5.0",
    "@lit/reactive-element": "^2.0.0",
    "@material/web": "^2.4.1",
    "@mlc-ai/web-llm": "^0.2.80",
    "@radix-ui/colors": "^3.0.0",
    "@types/three": "^0.170.0",
    "chokidar": "^3.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "draggabilly": "^3.0.0",
    "infinite-scroll": "^5.0.0",
    "isotope-layout": "^3.0.6",
    "lit": "^3.1.0",
    "masonry-layout": "^4.2.2",
    "onnxruntime-web": "^1.23.2",
    "packery": "^3.0.0",
    "protobufjs": "^7.5.4",
    "tailwind-merge": "^2.2.0",
    "three": "^0.170.0",
    "wrtc": "^0.4.7",
    "ws": "^8.16.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "undici": "^6.6.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.3.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@emotion/react": ">=11.0.0",
    "@emotion/styled": ">=11.0.0",
    "@mui/material": ">=5.0.0",
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-native": {
      "optional": true
    },
    "@emotion/react": {
      "optional": true
    },
    "@emotion/styled": {
      "optional": true
    },
    "@mui/material": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "src/",
    "wasm/"
  ]
}
